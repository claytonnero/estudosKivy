<Gerenciador>:	
	Menu:
		name: 'menu'
	Fazendo:
		name: 'tarefas'

<Menu>:
	BoxLayout:
		orientation: 'vertical'
		padding:110
		spacing:20
		#aula 17
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
				source:'../dados/imagens/moldura.png'				
		Image:
			source:'../dados/imagens/icon.png'
			size_hint_y:10
			heigth:20
			allow_stretch:True
		Botao:
			text:'Tarefas'
			on_release: app.root.current = 'tarefas'
		Botao:
			text: 'Assistente'			
		Botao:
			text: 'Sair'
			on_release: app.stop()
<Fazendo>:	
	BoxLayout:
		orientation: 'vertical'
		ActionBar:
			ActionView:
				ActionPrevious:					
					title:'Tarefas'
					on_release:app.root.current = 'menu'
				ActionButton:
					text: 'Sair'
					on_release: app.stop()
				ActionSeparator:
				ActionButton:
					text:'Menu'
					on_release:app.root.current = 'menu'

		ScrollView:	
			canvas.before:
				Color:
					rgba:0,0,0,1
				Rectangle:
					size:self.size
					pos:self.pos
			BoxLayout:
				id:box
				orientation:'vertical'
				size_hint_y:None
				height:self.minimum_height
			
		BoxLayout:
			size_hint_y:None
			height:40
			TextInput:
				id:texto				
			Button:
				text:'+'
				size_hint_x:None
				width:40
				on_release:root.addWidget()
<Tarefa>:
	size_hint_y:None
	height:150
	Label:
		id:label
		font_size:30
	Button:
		text:'X'
		size_hint_x:None
		width:40
		on_release:app.root.get_screen('tarefas').ids.box.remove_widget(root)
