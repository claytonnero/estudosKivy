<Gerenciador>:	
	Screen:
		Button:
			text: 'Ver Tarefas'	
			on_release: root.current = 'tarefas'
	Fazendo:

<Fazendo>:
	name:'tarefas'
	BoxLayout:
		orientation: 'vertical'
		ScrollView:
			BoxLayout:
				id:box
				orientation:'vertical'
				size_hint_y:None
				height:self.minimum_height
		BoxLayout:
			size_hint_y:None
			height:40
			TextInput:
				id:texto				
			Button:
				text:'+'
				size_hint_x:None
				width:40
				on_release:root.addWidget()
<Tarefa>:
	size_hint_y:None
	height:150
	Label:
		id:label
		font_size:30
	Button:
		text:'X'
		size_hint_x:None
		width:40
		on_release:app.root.get_screen('tarefas').ids.box.remove_widget(root)