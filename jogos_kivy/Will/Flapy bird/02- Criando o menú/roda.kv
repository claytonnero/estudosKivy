Manager:
	Menu:
		name:'menu'
	Game:
		name:'game'

<MenuButton@Button>:
	font_size:'30sp'
	background_normal:'../dados/botão_normal.png'
	background_down:'../dados/botão_apertado.png'
	border:0,0,0,0
	size_hint_y:None
	height:"60dp"
	
<Menu>:
	BoxLayout:
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
				source:'../dados/menu.png'

		orientation:'vertical'
		padding:'100dp', '50dp'
		spacing:'150dp'
		Widget:
		BoxLayout:
			padding:'30dp'
			spacing:'40dp'
			MenuButton:
				text:'Começar'
				font_size:25
				on_release:app.root.current = 'game'
			MenuButton:
				text:'Sair'
				on_release:app.stop()
				font_size:30
<Player>:
	source:'../dados/player.png'
	
<Game>:
	Player: